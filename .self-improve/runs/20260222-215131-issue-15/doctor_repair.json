{
  "enabled": true,
  "command": "if command -v shfmt >/dev/null 2>&1; then shfmt -w bin/ingo lib/*.sh; fi",
  "max_iterations": 1,
  "trigger_patterns": [
    "lint",
    "shellcheck",
    "verification command failure",
    "missing expected file touches"
  ],
  "attempts": [],
  "executed": false,
  "final": {
    "full_pass": true,
    "allow_commit": true,
    "allow_pr": true,
    "allow_issue_close": true
  }
}
